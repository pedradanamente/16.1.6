algoritmo calculaMediaAprovadoOuReprovado
var
	real N1,N2,N3,N4,media;
inicio
	escreva("Informe as 4 notas do aluno:);
	leia(N1,N2,N3,N4);
	media=(N1,N2.N3.N4)/4;
	escreva("A media do aluno é:",media);
	se (media >= 6) entao
		inicio
			escreva("Aluno aprovado");
		fim
	senao 
		inicio
			escreva("Aluno reprovado");
		fim
fim